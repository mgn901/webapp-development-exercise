{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "WebWorker"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "outDir": "./tsc",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
    "./scripts/**/*",
    "./*.config.js",
    "./*.config.cjs"
  ],
  "exclude": [
    "./src/server/prisma-client"
  ]
}
